<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="a3wish.main.com.aims212.sam.a3wish.member.UpdateMemberActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5">

        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp"
            app:title="修改個人資料"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:text="舊密碼"
            android:textColor="@color/colorBlack"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/oldPasswordsEdt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="請輸入舊密碼"
                android:textColor="#9e9e9e"
                android:layout_weight="0.8"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"/>

            <ImageView
                android:id="@+id/oldPasswordsIm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_delete"
                android:visibility="invisible"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="新密碼"
            android:textColor="@color/colorBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/newPasswordsEdt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="請輸入六位新密碼"
                android:textColor="#9e9e9e"
                android:layout_weight="0.8"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"/>

            <ImageView
                android:id="@+id/newPasswordsIm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_delete"
                android:visibility="invisible"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="密碼"
            android:textColor="@color/colorBlack"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/newPasswordsAgainEdt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="請輸入六位新密碼"
                android:textColor="#9e9e9e"
                android:layout_weight="0.8"
                android:inputType="textPassword"
                android:theme="@style/MyEditTextTheme"/>

            <ImageView
                android:id="@+id/newPasswordsAgainIm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_gravity="center_vertical"
                android:src="@android:drawable/ic_delete"
                android:visibility="invisible"/>


        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.5"
        android:gravity="bottom">

        <Button
            android:id="@+id/loginBt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:text="修改"
            android:textColor="@color/colorWhite"
            android:onClick="OnUpadatePasswordsBT"/>


    </LinearLayout>


</LinearLayout>